<h1>Responses</h1>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th scope="col">Questions</th>
        <% @responses.each do |response| %>
          <th scope="col"><%= "Response by \(" + (response.user.user_name).to_s + "\) " %></th>
        <% end %> 
      </tr>
    </thead>

    <tbody>
      <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.question.content %></td>

        <% if answer.question.question_type == "open_ended" || answer.question.question_type == "smiley_based" %>
          <td><%= answer.content %></td>

        <% else %>
          <% answer.question.options.each do |o| %>
            <td><%= o.content %></td>
          <% end %>

        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>

<%= link_to 'Export CSV', responses_path(format: "csv"), class:"btn btn-primary" %>
