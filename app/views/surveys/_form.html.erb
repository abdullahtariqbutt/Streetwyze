<%= form_with(model: @survey) do |form| %>

  <%= render "shared/errors", target: @survey %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :script %>
    <%= form.text_field :script %>
  </div>

  <!-- Code to add remove and select type of question and answer -->
  <%= render "add_remove_question_answer", target: @survey, form: form %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>






