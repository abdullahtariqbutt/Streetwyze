<div class="p-3">
  <%= form_with( url: target, method: 'GET') do |form| %>

      <div class="form-inline row">
        <div class="form-group mb-2">
          <%= form.label "Category", class:"pr-2 font-weight-bold" %>
          <%= form.select "search[category]", ["Art", "Education", "Health", "Business", "Enviroment", "Housing",
                             "Child Care", "Food", "Industry", "Safety", "Transportation"], 
                              {selected:"", disabled:"", prompt: 'Please select user'}, class:"form-control" %>  
        </div>

        <div class="form-group mb-2">
          <%= form.label "Type of Stuff", class:"pl-3 font-weight-bold" %>
          <div class="form-inline pl-2">
            <%= form.radio_button "search[type]", "Good", class:"form-check-input" %>
            <%= form.label :Good, class:"form-check-label pr-2" %>
            <%= form.radio_button "search[type]", "Bad", class:"form-check-input" %>
            <%= form.label :Bad, class:"form-check-label pr-2" %>
            <%= form.radio_button "search[type]", "Fix", class:"form-check-input" %>
            <%= form.label :Fix, class:"form-check-label pr-2" %>
          </div>
        </div>
      </div>

      <div class="form-inline row">
        <div class="input-group form-group mb-2">
          <%= form.label "Pick Date", class:"pr-2 font-weight-bold" %>
          <%= form.text_field "search[date]", value:"", id:"date_field", autocomplete:"off", class:"form-control" %>
        </div>

        <div class="form-inline row pl-3">
          <div class="form-group mb-2">
            <%= form.label "Media State", class:"pl-3 font-weight-bold" %>
            <div class="form-inline pl-2">
              <%= form.radio_button "search[media]", "All", class:"form-check-input" %>
              <%= form.label "All", class:"form-check-label pr-2" %>
              <%= form.radio_button "search[media]", "With Media", class:"form-check-input" %>
              <%= form.label "With Media", class:"form-check-label pr-2" %>
              <%= form.radio_button "search[media]", "No Media", class:"form-check-input" %>
              <%= form.label "No Media", class:"form-check-label pr-2" %>
            </div>
          </div>
        </div>
      </div>

      <div class="form-inline row">
        <div class="input-group form-group mb-2">
          <%= form.label "Search", class:"pr-2 font-weight-bold" %>
          <%= form.text_field "search[keyword]", value:"", class:"form-control" %>
        </div>

        <div class="form-inline row pl-3">
          <div class="form-group mb-2">
            <%= form.label "Author", class:"pl-3 font-weight-bold" %>
            <div class="form-inline pl-2">
              <%= form.radio_button "search[author]", "All", class:"form-check-input" %>
              <%= form.label "All", class:"form-check-label pr-2" %>
              <%= form.radio_button "search[author]", "Only Me", class:"form-check-input" %>
              <%= form.label "Only Me", class:"form-check-label pr-2" %>
            </div>
          </div>
        </div>
      </div>

      <div class="actions form-group row">
        <%= form.submit "Hit it" ,class:"btn btn-primary" %>
      </div>
  <% end %>
</div>
