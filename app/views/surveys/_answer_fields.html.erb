<div class='nested-fields'>
  <!-- Code to remove answer -->
  <div class='form-group'>
    <%= form.hidden_field :_destroy %>
    <%= form.text_field :content, placeholder: 'Answer', class: 'form-control' %>
    <small>
      <!-- Specifing in data, which action will be performed when clicked -->
      <%= link_to "Remove Answer", "#", data: { action: "click->nested-form#remove_association" } %>
    </small>
  </div>
</div>
