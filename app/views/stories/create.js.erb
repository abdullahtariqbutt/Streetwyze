<% if @story.errors.any? %>

  $("#new_story_form").html("<%= j render('form', target: [@map_asset, @story], map_asset: @map_asset) %>");
  rating_binder();

<% else %>

  $('#map_asset .rating_display').empty();
  $('#map_asset .rating_display').data("score", <%= @story.map_asset.rating %>);
  asset_rating();

  $("#stories_table").prepend("<%= j render('shared/story_row', story: @story) %>");
  $("#new_story_modal").modal('hide');

<% end %>
