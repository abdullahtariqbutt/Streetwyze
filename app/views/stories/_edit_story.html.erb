<!-- User Sign In Check to Allow Edit -->
<% if user_signed_in? %>
  <% if story.user == current_user %>
    <%= link_to 'Edit', edit_story_path(story), class: "btn btn-primary", data: { toggle: 'modal', target: '#edit_story_modal', remote: true } %>
  <% end %>
<% end %>

<!-- Modal Code -->
<div class="modal fade" id="edit_story_modal" tabindex="-1" aria-labelledby="StoryModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="edit_story_modal_label">Edit Story</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="edit_story_form">
      </div>
    </div>
  </div>
</div>
<!-- End -->
