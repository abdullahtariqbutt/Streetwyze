<div>
    <strong>Name:</strong>
  </div>
  <%= @story.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @story.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @story.category %>
</p>

<p>
  <strong>Rating:</strong>
  <div id="story">
    <div id="rating_display" data-score="<%= @story.rating %>"></div>
  </div>
</p>

<p>
  <strong>Stuff type:</strong>
  <%= @story.stuff_type %>
</p>

<p>
  <strong>Description:</strong>
  <%= @story.description %>
</p>

<%= render "shared/display_uploads", target:@story %>

<!-- User Sign In Check to Allow Edit -->
<% if user_signed_in? %>
  <% if @story.user == current_user %>
    <%= link_to 'Edit', edit_story_path(@story), class:"btn btn-primary" %> |
  <% end %>
<% end %>

<%= link_to 'Back', stories_path %>
