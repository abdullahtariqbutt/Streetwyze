<p id="notice"><%= notice %></p>

<h1 class="text-center">Survey</h1>

<table class="table table-bordered table-striped">
  <thead class="bg-dark text-light">
    <tr>
      <th>Title</th>
      <th>Script</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.title %></td>
        <td>
          <p class="overflow"><%= survey.script %></p>
        </td>

        <td align="center"><%= link_to 'Show', survey_path(survey), class: "btn btn-primary" %></td>

        <% if current_user.id == survey.user_id %>
          <td align="center"><%= link_to 'Edit', edit_survey_path(survey), class: "btn btn-secondary" %></td>

          <td align="center"><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.role == "admin" %>
  <%= link_to 'New Survey', new_user_survey_path(current_user), class: "btn btn-primary", data: { confirm: 'Are you sure?' } %>
<% end %>
