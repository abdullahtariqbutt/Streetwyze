<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-10 col-md-8 col-lg-6">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name) ,html: {class:"bg-light border p-4"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <h1 class="text-center">Sign up</h1>

        <div class="form-group">
          <div class="col-12">
            <%= f.label "Email/Phone" %><br />
          </div>
          <div class="col-12">
            <%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder:"Email/Phone Number", class:"form-control"  %>  
          </div>
        </div>

            <div class="field">
              <% usrName = set_random_user_name()%>
              <%= f.text_field :user_name,value:usrName, type: :hidden%>
            </div>

            <div class="form-group">
              <div class="col-12">
                  <%= f.label :password %>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
              </div>
              <div class="col-12">
                <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password", class:"form-control"  %> 
              </div>
            </div>

            <div class="form-group">
              <div class="col-12">
                <%= f.label :password_confirmation %><br />
              </div>
              <div class="col-12">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirm Password", class:"form-control"  %>
              </div>
            </div>

            <div class="actions col-12">
              <%= f.submit "Sign up" ,class:"btn btn-primary"  %>
            </div>
            
            <br>

            <div class="col-12">
              <%= render "devise/shared/links" %>
            </div>
      <% end %>
    </div>
  </div>
</div>