<div class="row d-flex justify-content-center align-items-center m-0" style="height: 100vh;">
  <div class="login_oueter">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name) ,html: {class:"bg-light border"}) do |f| %>

      <div class="login_oueter">
        <h4 class="title my-3">Log in</h4>
        <div class="col-12">
          <%= f.label :email %><br/>
          <div class="input-group mb-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email/Phone Number" %>
          </div>
        </div>

        <div class="col-12">
          <%= f.label :password %><br/>
            <div class="input-group">
              <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", id:"password" %>
              <div class="input-group-append">

                <span class="input-group-text" id="eye">
                  <i class="fas fa-eye" id="show_eye">
                    <%= image_tag("eye_visible.png", height: '24', width: '28') %>
                  </i>
                  <i class="fas fa-eye-slash d-none" id="hide_eye">
                    <%= image_tag("eye_slash_visible.png", height: '24', width: '28') %>
                  </i>
                </span>

              </div>
            </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in" ,class:"btn btn-primary" %>
        </div>

    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
