<h1>Editing Story</h1>

<%= form_with(model:@story, local:false) do |form| %>

  <% if @story.errors.any? %>
    <div id="error_explanation">
    <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>
      <ul>
        <% @story.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control", readonly: true , value: @story.name %>
  </div>

  <div class="field form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class:"form-control", readonly: true, value: @story.address %>
  </div>

  <div class="field form-group">
    <%= form.label :category %>
    <%= form.select :category, ["Art", "Education", "Health", "Business", "Enviroment", "Housing", "Child Care", "Food", "Industry", "Safety", "Transportation"] %>  
  </div>

  <div class="field form-group" id="rate">
    <%= form.label :rating %>
    <div id="rating"></div>
    <%= form.hidden_field :rating, id: "review_star" %>
  </div>

  <div class="field form-group">
    <p id="rating_check" >I want to leave a rating</p>
  </div>

  <div class="field form-group">
    <%= form.label :stuff_type %>
    <br>
    <%= form.radio_button :stuff_type, "Good" %>
    <%= form.label :Good %>
    <%= form.radio_button :stuff_type, "Bad" %>
    <%= form.label :Bad %>
    <%= form.radio_button :stuff_type, "Fix" %>
    <%= form.label :Fix %>
  </div>

  <div class="field form-group">
    <%= form.label :description %>
    <%= form.rich_text_area :description, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true, class:"form-control" %>
  </div>

  <%= form.submit class:"btn btn-primary" %>

<% end %>

<br>

<%= link_to 'Show', @story %> |
<%= link_to 'Back', stories_path %>
