      <ul>
        <% survey.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :script %>
    <%= form.text_field :script %>
  </div>

  <h3>Questions</h3>
  <div id='questions'>
    <%= form.fields_for :questions do |question| %>
      <%= render 'question_fields', :f => question %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'Add Question', form, :questions %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
